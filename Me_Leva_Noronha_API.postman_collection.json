{
	"info": {
		"_postman_id": "me-leva-noronha-api",
		"name": "Me Leva Noronha API",
		"description": "Collection para autenticação, gerenciamento de usuários e tabela de marés",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Autenticação",
			"item": [
				{
					"name": "Criar Usuário",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201 || pm.response.code === 200) {",
									"    pm.environment.set(\"userId\", pm.response.json().id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"nome\": \"João Silva\",\n    \"username\": \"joaosilva\",\n    \"email\": \"joao.silva@example.com\",\n    \"senha\": \"senha123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/register",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"auth",
								"register"
							]
						},
						"description": "Endpoint para criar um novo usuário no sistema"
					},
					"response": []
				},
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    pm.environment.set(\"accessToken\", jsonData.accessToken);",
									"    pm.environment.set(\"refreshToken\", jsonData.refreshToken);",
									"    pm.environment.set(\"tokenType\", jsonData.tokenType);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"joaosilva\",\n    \"senha\": \"senha123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/login",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"auth",
								"login"
							]
						},
						"description": "Endpoint para autenticar usuário e obter tokens JWT"
					},
					"response": []
				},
				{
					"name": "Refresh Token",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"refreshToken\": \"{{refreshToken}}\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/refresh",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"auth",
								"refresh"
							]
						},
						"description": "Endpoint para renovar o access token usando o refresh token"
					},
					"response": []
				},
				{
					"name": "Logout",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"refreshToken\": \"{{refreshToken}}\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/logout",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"auth",
								"logout"
							]
						},
						"description": "Endpoint para revogar o refresh token (logout)"
					},
					"response": []
				}
			],
			"description": "Endpoints relacionados à autenticação e gerenciamento de tokens"
		},
		{
			"name": "Tabela de Marés",
			"item": [
				{
					"name": "Listar Marés por Data",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{accessToken}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/tabuamare?data=2025-01-13",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"tabuamare"
							],
							"query": [
								{
									"key": "data",
									"value": "2025-01-13",
									"description": "Data no formato yyyy-MM-dd (ex: 2025-01-13)"
								}
							]
						},
						"description": "Endpoint para listar todos os horários e alturas de maré de uma data específica"
					},
					"response": []
				},
				{
					"name": "Cadastrar Maré",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{accessToken}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"data\": \"2025-01-13\",\n    \"horario\": \"09:30\",\n    \"metro\": \"0.4M\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/tabuamare",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"tabuamare"
							]
						},
						"description": "Endpoint para cadastrar um novo registro de maré (horário e altura)"
					},
					"response": []
				}
			],
			"description": "Endpoints relacionados à tabela de marés"
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8080",
			"type": "string"
		}
	]
}



