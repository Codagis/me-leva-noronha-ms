{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "rm -rf target && mvn clean package -DskipTests",
    "watchPatterns": [
      "**/*.java",
      "**/*.xml",
      "**/*.properties",
      "**/*.yml",
      "pom.xml"
    ]
  },
  "deploy": {
    "startCommand": "java -jar target/melevanoronha-0.0.1-SNAPSHOT.jar --spring.profiles.active=prod",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

